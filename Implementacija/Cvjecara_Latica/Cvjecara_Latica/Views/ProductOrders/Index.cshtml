@model IEnumerable<Cvjecara_Latica.Models.ProductOrder>

@{
    ViewData["Title"] = "Product Orders";
}

@if (User.IsInRole("Administrator"))
{
    <h1>Product Orders</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Order)</th>
                <th>@Html.DisplayNameFor(model => model.Product)</th>
                <th>@Html.DisplayNameFor(model => model.ProductQuantity)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Order.OrderID)</td>
                    <td>@Html.DisplayFor(modelItem => item.Product.ProductID)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductQuantity)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProductOrderID">Edit</a> 
                        <a asp-action="Details" asp-route-id="@item.ProductOrderID">Details</a> 
                        <a asp-action="Delete" asp-route-id="@item.ProductOrderID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger">Access denied. You must be an administrator to view this page.</p>
}